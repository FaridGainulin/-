.invest-section
  background-image: url('../images/invest-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #f5f5f5

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 80px 0
    +above($breakpoints.md)
      padding 80px 0 100px 0
    +above($breakpoints.xxl)
      padding 114px 0 163px 0

  &__img
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width: 300px;
      height: auto;
      bottom: 0;
      right: -181px;
    +above($breakpoints.md)
      width: 412px;
      right: -163px;
    +above($breakpoints.xxl)
      width: 526px;
      right: -300px;

  &__img-mobile
    width 150px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      display: none

  &__title,
  &__sub-title
    color: #fff
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 8px 0 15px 0
    +above($breakpoints.sm)
      padding 8px 0 50px 0
    +above($breakpoints.md)
      padding 8px 0 80px 0
    +above($breakpoints.xxl)
      padding 8px 0 111px 0

  &__sub-title-mark
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #EB0000
      border-radius: 15px
      width: 67px;
      height: 16px;
      top: 0px;
      left: -9px;
      +above($breakpoints.sm)
        width: 85px;
        height: 26px;
        top: -1px;
        left: -3px;
      +above($breakpoints.md)
        width: 91px;
        height: 30px;
        top: -2px;
        left: -4px;
      +above($breakpoints.xxl)
        width: 103px;
        height: 35px;
        top: -3px;
        left: -4px;

  &__cards-wrapper
    position relative
    z-index 0
    &:after
      content: ""
      position: absolute
      z-index -1
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.35)
      border-radius: 30px 30px 0 0
      width: 322px;
      height: 345px;
      top: -19px;
      left: -7px;
      +above($breakpoints.sm)
        width: 716px;
        height: 441px;
        top: -24px;
        left: -25px;
      +above($breakpoints.md)
        width: 870px;
        height: 537px;
        top: -34px;
        left: -40px;
      +above($breakpoints.xxl)
        width 1150px
        height: 690px
        top: -43px;
        left: -50px;

  &__cards
    position relative
    z-index 0
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 40px

  &__card
    width 260px !important
    background-color #fff
    color: #1D1D1B
    border-radius: 20px
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    padding 15px
    +above($breakpoints.sm)
      width: 215px !important;
      padding: 25px 15px 20px 15px;
    +above($breakpoints.md)
      border-radius: 25px
      width 250px !important
      padding 28px 20px 23px 20px
    +above($breakpoints.xxl)
      width 320px !important
      height: 484px
      border-radius: 30px
      padding 31px 20px 26px 20px

  &__card-title
    background-color #EEEEEE
    border-radius: 15px
    width: 220px;
    height: 45px;
    padding-top: 11px;
    +above($breakpoints.sm)
      width: 170px;
      height: 44px;
      padding-top: 8px;
    +above($breakpoints.md)
      width: 205px;
      height: 48px;
      padding-top: 9px;
    +above($breakpoints.xxl)
      width 260px
      height: 60px
      padding-top 11px

  &__card-sub-title
    padding 20px 0 10px 0
    +above($breakpoints.sm)
      padding 25px 0 13px 0
    +above($breakpoints.md)
      padding 40px 0 13px 0
    +above($breakpoints.xxl)
      padding 54px 0 13px 0

  &__card-num
    line-height 100% !important

  &__card-line
    width 60px
    height: 3px
    margin 15px auto 15px
    background-color #252525
    +above($breakpoints.sm)
      margin 20px auto 20px
      width 74px
    +above($breakpoints.md)
      margin 25px auto 25px
      width 84px
    +above($breakpoints.xxl)
      margin 30px auto 34px
      width 94px

  &__card-text
    color: #7379A9
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 38px
    +above($breakpoints.md)
      padding-bottom 48px
    +above($breakpoints.xxl)
      padding-bottom 58px

.invest-card-blue
  background: linear-gradient(90.00deg, rgb(72, 119, 192),rgb(46, 70, 169) 100%),rgb(238, 238, 238)
  color: #fff
.invest-card-red
  background: linear-gradient(90.00deg, rgb(210, 49, 49),rgb(235, 0, 0) 100%),rgb(238, 238, 238)
  color: #fff
