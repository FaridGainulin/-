.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #151617

  &__container
    position relative
    z-index 1
    color: #fff
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 60px 0 50px 0
    +above($breakpoints.md)
      padding 90px 0 80px 0
    +above($breakpoints.xxl)
      padding 166px 0 142px 0

  &__box
    +above($breakpoints.sm)
      margin-left 290px
    +above($breakpoints.md)
      margin-left 390px
    +above($breakpoints.xxl)
      margin-left 497px

  &__logo
    width: 150px;
    height: auto;
    margin: 0 auto 15px;
    +above($breakpoints.sm)
      margin 0
      margin-bottom 15px
    +above($breakpoints.md)
      margin-bottom 27px
    +above($breakpoints.xxl)
      width 217px
      margin-bottom 27px

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title-wrapper
    display: flex
    flex-direction: row
    align-items: center
    padding 13px 0 0 0
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
      padding 13px 0 18px 0
    +above($breakpoints.md)
      padding 13px 0 18px 0
    +above($breakpoints.xxl)
      padding 13px 0 51px 0

  &__title
    +above($breakpoints.xxl)
      line-height 127% !important

  &__sub-title-line
    display: none
    +above($breakpoints.sm)
      display: block
      background-color #2E46A9
      border-radius: 15px
      width 3px
      height: 40px
    +above($breakpoints.md)
      width 3px
      height: 45px
    +above($breakpoints.xxl)
      width 4px
      height: 48px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row-reverse
      justify-content flex-end
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 24px

  &__bottom-text
    display: flex
    flex-direction: row
    align-items: center
    gap: 15px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      flex-direction: column
      align-items: flex-start
    +above($breakpoints.md)
      gap: 10px

  &__bottom-img
    width 35px
    height: auto
    +above($breakpoints.sm)
      width 25px
    +above($breakpoints.md)
      width 30px
    +above($breakpoints.xxl)
      width 35px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    padding 10px 15px
    border-radius: 13px
    backdrop-filter: blur(5px);
    background: rgba(255, 255, 255, 0.15)
    border-top: 1px solid #9c9b9b
    border-left: 1px solid #9c9b9b
    border-right: 1px solid #9c9b9b
    width 308px
    +above($breakpoints.sm)
      width 300px
      padding 15px 15px 15px 15px
    +above($breakpoints.md)
      width 360px
      padding 20px 20px 20px 20px
    +above($breakpoints.xxl)
      width 384px
      padding 24px 22px 25px 22px

  &__img
    width 300px
    height: auto
    margin: 10px 0px 0 67px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width 450px
      bottom: 0
      left: 0
    +above($breakpoints.md)
      width 668px
      left: -30px
    +above($breakpoints.xxl)
      width 868px
      left: -45px
