.input
  height: 50px
  width 100%
  padding: 0 30px;
  font-family: 'Inter-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 140%
  color: #444444
  border: 1px solid #000
  border-radius: 30px;
  background: #fff
  position relative
  overflow hidden

  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1
  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    background: #000;
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: #fff
    font-weight: bold
    border-radius: 100px
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s
  &:hover
    border 1px solid #2E46A9
  &:focus
    color: #000
    caret-color: #000
    border 1px solid #2E46A9
    box-shadow: 3px 3px 20px 0px #2E46A9
    background: #fff
    &::placeholder
      color: #444444
  &::placeholder
    color: #444444
  +above($breakpoints.sm)
    height: 55px
    font-size: 15px;
  +above($breakpoints.md)
    height: 60px
    font-size: 16px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 65px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background-color transparent
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 15px 10px 10px 20px
    resize: none
    height: 70px
    border-radius: 15px
    border: 1px solid #F5F5F5
    background: #F5F5F5
    color: #000
    +above($breakpoints.sm)
      border-radius: 20px
      height: 100px
    +above($breakpoints.md)
      border-radius: 30px
      height: 120px
      padding: 25px 10px 10px 34px
    +above($breakpoints.xxl)
      height: 130px

  &--secondary
    border: 1px solid #D8D8D8

  &--tertiary
    border: 1px solid #F5F5F5
    background: #F5F5F5
    color: #000
