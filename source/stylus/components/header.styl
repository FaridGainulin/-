.header
  &__container
    display: flex
    flex-direction: row
    align-items: center
    justify-content space-between

  &__text
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 40px
    height: auto
    +above($breakpoints.sm)
      width 40px
    +above($breakpoints.md)
      width 45px
    +above($breakpoints.xxl)
      width 48px

  &__connection
    display: flex
    flex-direction: row
    gap: 5px
    +above($breakpoints.sm)
      align-items: center

  &__connection-icon
    width 25px
    height: 25px
    +above($breakpoints.sm)
      width 30px
      height: 30px
    +above($breakpoints.md)
      width 36px
      height: 36px
    +above($breakpoints.xxl)
      width 44px
      height: 44px

  &__connection-number
    +above($breakpoints.sm)
      display: none

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
      justify-content center
      align-items: center
      color: #fff
      background: linear-gradient(90.00deg, rgb(72, 119, 192),rgb(46, 70, 169) 100%),rgb(0, 0, 0)
      border-radius: 30px
      width 100px
      height: 30px
      cursor pointer
      width 150px
      height: 30px
    +above($breakpoints.md)
      width 180px
      height: 36px
    +above($breakpoints.xxl)
      width 203px
      height: 44px
