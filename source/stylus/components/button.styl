.btn
  height: 50px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #fff
  border-radius: 30px
  // border: 3px solid #fff;
  // text-transform: uppercase
  background: linear-gradient(90.00deg, rgb(210, 49, 49),rgb(235, 0, 0) 100%)
  font-family: 'Inter-Bold'
  font-weight: 700
  font-size: 14px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 15px;
    height: 55px;
  +above($breakpoints.md)
    height: 60px;
    font-size: 16px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 65px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

  &--secondary
    background: #1D1D1B
    font-size: 14px;
    text-transform: uppercase
    height: 40px
    +above($breakpoints.sm)
      font-size: 16px;
      height: 50px
    +above($breakpoints.md)
      font-size: 18px;
      height: 55px
    +above($breakpoints.xxl)
      height: 60px
      font-size: 20px;

